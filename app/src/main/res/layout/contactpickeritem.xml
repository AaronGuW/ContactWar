<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/contact_photo"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="顾佳文"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_toEndOf="@id/contact_photo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/contact_level"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:text="等级："
        android:layout_alignLeft="@+id/contact_name"
        android:layout_below="@+id/contact_name"/>

    <TextView
        android:id="@+id/contact_job"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:text="职业："
        android:layout_toEndOf="@+id/contact_level"
        android:layout_alignTop="@+id/contact_level"
        android:layout_marginStart="15dp"/>

    <CheckBox
        android:id="@+id/selected"
        android:checked="false"
        android:focusable="false"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="180dp"
        />

</RelativeLayout>